<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/customPrimaryBackgroundColor</item>
        <item name="colorPrimaryDark">@color/customSecondaryBackgroundColor</item>
        <item name="colorAccent">@color/customBackgroundAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/customBackgroundColor</item>
    </style>

    <style name="Theme.Custom" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/customPrimaryTextColor</item>
        <item name="colorControlHighlight">@color/customBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/customPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/customSecondaryTextColor</item>
        <item name="android:background">@color/customPrimaryBackgroundColor</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/customPrimaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Custom.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Custom.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
